<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Security">


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="379dp"
        android:layout_height="224dp"
        android:layout_marginBottom="48dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Security System"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="206dp" />

            <Spinner
                android:id="@+id/securitySystem"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:layout_column="1"
                android:entries="@array/SecuritySystem"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="205dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Garage Doors"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="268dp" />

            <Spinner
                android:id="@+id/garageDoors"
                android:layout_width="227dp"
                android:layout_height="28dp"
                android:layout_column="1"
                android:entries="@array/GarageDoors"
                tools:layout_editor_absoluteX="183dp"
                tools:layout_editor_absoluteY="267dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lights"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="397dp" />

            <Spinner
                android:id="@+id/lights"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:entries="@array/Lights"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="390dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locks"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="453dp" />


            <Spinner
                android:id="@+id/locks"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:entries="@array/Locks"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="451dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Door/Window"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="509dp" />

            <Spinner
                android:id="@+id/DoorWindow"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:entries="@array/Windows"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="512dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensors"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="569dp" />

            <Spinner
                android:id="@+id/sensors"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:entries="@array/Sensors"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="573dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Detector"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="635dp" />

            <Spinner
                android:id="@+id/motionDetector"
                android:layout_width="228dp"
                android:layout_height="28dp"
                android:entries="@array/MotionDetector"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="634dp" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="211dp"
        android:layout_height="183dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/schoollogo_foreground" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Security"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Test System"
        android:onClick="testSystem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>